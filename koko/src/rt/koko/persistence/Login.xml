<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">



<mapper namespace="rt.koko.mapper.LoginMapper">
	<cache />

	<!-- 로그인 -->
	<select id="loginCheck" resultType="MemberDO" parameterType="String">
		select * from member
		<where>
			<if test='0 != null and 0 != ""'>
				AND m_id = #{0}
			</if>
			<if test='1 != null and 1 !=""'>
				AND m_password = #{1}
			</if>
		</where>
	</select>
	
</mapper>















